# ============================================
# OBRATTO - Configurações da Aplicação
# ============================================

# === Aplicação ===
APP_NAME=OBRATTO
BASE_URL=http://localhost:8000
SECRET_KEY=sua-chave-secreta-super-segura-mude-em-producao
RUNNING_MODE=Development

# Para gerar uma chave secreta segura, execute:
# python -c "import secrets; print(secrets.token_urlsafe(32))"

# === Banco de Dados ===
DATABASE_PATH=obratto.db

# === Servidor ===
HOST=0.0.0.0
PORT=8000
RELOAD=True

# === Email (Resend.com) - Opcional ===
# Obtenha sua chave em: https://resend.com/api-keys
RESEND_API_KEY=
RESEND_FROM_EMAIL=noreply@seudominio.com
RESEND_FROM_NAME=OBRATTO

# === Logging ===
# Níveis: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# === Rate Limiting (Proteção contra Força Bruta) ===
# Login
RATE_LIMIT_LOGIN_MAX=5
RATE_LIMIT_LOGIN_MINUTOS=5

# Cadastro
RATE_LIMIT_CADASTRO_MAX=3
RATE_LIMIT_CADASTRO_MINUTOS=10

# Recuperação de Senha
RATE_LIMIT_ESQUECI_SENHA_MAX=1
RATE_LIMIT_ESQUECI_SENHA_MINUTOS=1

# === Mercado Pago ===
MERCADOPAGO_ACCESS_TOKEN=
MERCADOPAGO_PUBLIC_KEY=

# === Segurança ===
# Tempo de expiração da sessão em segundos (3600 = 1 hora)
SESSION_MAX_AGE=3600

# Expiração do token de recuperação de senha em horas
TOKEN_EXPIRACAO_HORAS=1
