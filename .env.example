# Configurações do Mercado Pago
# IMPORTANTE: Nunca commite este arquivo com valores reais em repositórios públicos!

# Credenciais de TESTE (sandbox)
# Obtenha suas credenciais em: https://www.mercadopago.com.br/developers/panel/credentials
MERCADOPAGO_ACCESS_TOKEN_TEST = "TEST-1234567890-ACCESS-TOKEN-AQUI"
MERCADOPAGO_PUBLIC_KEY_TEST = "TEST-1234567890-PUBLIC-KEY-AQUI"

# Credenciais de PRODUÇÃO (use apenas quando estiver pronto para produção)
MERCADOPAGO_ACCESS_TOKEN_PROD = ""
MERCADOPAGO_PUBLIC_KEY_PROD = ""

# Configurações gerais
MERCADOPAGO_ENVIRONMENT = "sandbox"  # "sandbox" para testes, "production" para produção

# URLs de callback (ajuste para seu domínio)
BASE_URL = "http://localhost:8000"  # Mude para seu domínio em produção
SUCCESS_URL = f"{BASE_URL}/fornecedor/planos/pagamento_sucesso"
FAILURE_URL = f"{BASE_URL}/fornecedor/planos/pagamento_erro"
PENDING_URL = f"{BASE_URL}/fornecedor/planos/pagamento_pendente"

# Webhook URL (para receber notificações de status)
WEBHOOK_URL = f"{BASE_URL}/fornecedor/planos/webhook"

# Configurações de segurança
WEBHOOK_SECRET = "seu_secret_webhook_aqui"  # Opcional: para validar webhooks

# Instruções para configurar:
# 1. Crie uma conta no Mercado Pago Developers: https://www.mercadopago.com.br/developers/
# 2. Acesse o painel de credenciais: https://www.mercadopago.com.br/developers/panel/credentials
# 3. Copie o Access Token e Public Key de TESTE
# 4. Cole os valores nas variáveis acima
# 5. Para produção, use as credenciais de PRODUÇÃO e mude MERCADOPAGO_ENVIRONMENT para "production"

# Exemplo de como as credenciais devem ficar (valores fictícios):
# MERCADOPAGO_ACCESS_TOKEN_TEST = "TEST-8888888888888888-121212-abcdefghijklmnopqrstuvwxyz-999999999"
# MERCADOPAGO_PUBLIC_KEY_TEST = "TEST-abcdefgh-1234-5678-9012-ijklmnopqrst"
